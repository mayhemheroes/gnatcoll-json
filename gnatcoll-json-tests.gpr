with "gnatcoll-json.gpr";
with "gnatcoll-json-util.gpr";
with "aunit";
project GnatColl.JSON.Tests is

   for Main use ("gnatcoll-json-support-test-main.adb");

   for Languages use ("ada");
   for Source_Dirs use ("tests/**");
   for Object_Dir use ".obj/" & project'Name;
   for Exec_Dir use "bin";

   package Builder is
      for Default_Switches ("Ada") use  GnatColl.JSON.Builder'Default_Switches ("Ada");
   end Builder;

   package Binder is
      for Default_Switches ("Ada") use ("-E");
   end  Binder;
   package Compiler is

      for Default_Switches ("Ada") use  GnatColl.JSON.Compiler'Default_Switches ("Ada");
      for Switches ("table_vstring_initialize.adb") use ("-g");
   end Compiler;

end GnatColl.JSON.Tests;
