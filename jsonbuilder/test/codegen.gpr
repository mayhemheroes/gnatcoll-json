with "gnatcoll.gpr";
with "gnatcoll-json.gpr";

project Codegen is

   for Object_Dir use ".obj";
   for Source_Dirs use ("src/**");

   for Main use ("simple-main.adb");

   package Compiler is
      for Switches ("ada") use ("-gnatwa", "-g", "-O2", "-gnatf", "-fstack-check");
   end Compiler;

   package Make is
      for Makefile use "Makefile";
   end Make;

end Codegen;
